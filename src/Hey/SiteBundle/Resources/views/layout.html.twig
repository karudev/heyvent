<!DOCTYPE html>

<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Heyvent{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- Le styles -->
        <link href="{{ asset('bundles/heysite/css/main.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/heysite/css/base.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/heysite/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/heysite/css/event/boilerplate.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/heysite/css/event/elem.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/heysite/css/event/custom.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/heysite/css/webfonts/titre/stylesheet.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/heysite/css/scrollbar/jquery.mCustomScrollbar.css') }}" rel="stylesheet" type="text/css">
    {% block stylesheets %}{% endblock %}
        <!-- stylesheet for demo and examples -->
        <style type="text/css">




            </style>
            <!-- Custom scrollbars CSS -->
            <link href="{{ asset('bundles/heysite/css/bootstrap-responsive.css') }}" rel="stylesheet">


            <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
            <!--[if lt IE 9]>
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->


        </head>

        <body>
            <div class="navbar navbar-inverse  nav-collapse collapse">
                <div class="gridContainer clearfix">
                    <header id="header">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
         {% block nav %}
                        <a class="brand" href="#"><span><img src="{{ asset('bundles/heysite/images/event/logo_heyvent.png') }}" alt="logo" class="sizelogo"/></span> </a>
                        <!-- Barre de recherche -->
                        <div  class="search input-append">
                            <form action="{{path('_event_search')}}" method="post">
                            <input class="span2" name="search[word]" id="appendedInputButton" type="text">
                            <button class="btn" type="submit">Go!</button>
                            </form>
                        </div>
                        <!-- Barre de recherche -->
                       {% if(app.user|length >0 ) %}
                        <div class="nav-collapse collapse">
                            <ul class="nav">

                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Mes Heyvents ({{app.session.get('events_user')|length}})<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        {% for event in app.session.get('events_user') %}
                                            <li><a href="{{ path('_event_show', { 'id': event.id }) }}"><i class="icon-time"></i> {{event.name}}</a></li>
                                        {% endfor %}   



                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a data-toggle="dropdown" class="dropdown-toggle" href="#"><img src="{{ asset('bundles/heysite/images/event/base/people10.jpg') }}"/>  <b>{{ app.user.firstname}} {{app.user.lastname}}</b><b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('_account_dashboard') }}"><i class="icon-th"></i> Mon tableau de bord</a></li>
                                            <li><a href="{{ path('_account_event_create') }}"><i class="icon-plus-sign"></i> Créer un Heyvent</a></li>
                                            <li><a href="{{ path('_account_picture') }}"><i class="icon-folder-open"></i> Mes images</a></li>
                                            <li><a href="{{ path('_account_profil_edit') }}"><i class="icon-user"></i> Mon profil</a></li>
                                            <li><a href="{{ path('_account_logout') }}"><i class="icon-off"></i> Se déconnecter</a></li>


                                        </ul>
                                    </li>



                                </ul>
                            </div><!--/.nav-collapse -->
                        {% endif %}
     	{% endblock %}
                        </header>
      {% block body %}

      {% endblock %}
                    </div> </div>



                <!-- Le javascript
                ================================================== -->
                <!-- Placed at the end of the document so the pages load faster -->

                <script src="{{ asset('bundles/heysite/js/jquery-1.7.2.min.js') }}" ></script>
                <script src="{{ asset('bundles/heysite/js/jquery-ui-1.9.1.custom.min.js') }}" ></script> 
                <script src="{{ asset('bundles/heysite/js/jquery.iphone-slide.min.js') }}" ></script>
                <script src="{{ asset('bundles/heysite/js/respond.min.js') }}" ></script>
                <script src="{{ asset('bundles/heysite/js/jquery.mousewheel.min.js') }}"></script>
                <script src="{{ asset('bundles/heysite/js/scrollbar/jquery.mCustomScrollbar.js') }}"></script>
                <script src="{{ asset('bundles/heysite/js/masonry/jquery.masonry.js') }}"></script>
                <script src="{{ asset('bundles/heysite/js/jquery.heyvent.js') }}"></script>
                <script src="{{ asset('bundles/heysite/js/karudev-plugin.js') }}"></script>
                <script src="{{ asset('bundles/heysite/js/bootstrap.js') }}"></script>
                <script>
                        (function($){
			
                                 $("#pave1,#pave2,#pave3,#pave4").mCustomScrollbar();
                            
                              
        
                        })(jQuery);
                    </script>
                    
        {% block javascripts %}
         {% endblock %}
                </body>
            </html>
