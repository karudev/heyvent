{% extends "HeyAccountBundle::layout.html.twig" %}
{% block body %}
<div class="heyvent_contain_step">
{% render 'HeyAccountBundle:Event:etapemenu' %}
<div class="heyvent_form">
<h3>{{title}}</h3>

<form method="post" action="{{ path('_account_event_create')}}" enctype="multipart/form-data" name="heyvent">
    <table>
        <tr>
            <td>Image de présentation</td>
            <td><input type="file" name="image" /> <input type="hidden" name="MAX_FILE_SIZE" value="10000000"><i>( Inférieur à 10Mo )</i> </td>  
        </tr>
       
        <tr>
            <td>Nom</td>
            <td>{{ form_widget(formEvent.name,{ 'attr': {'class': 'input-xxlarge'} })}}</td>  
        </tr>
         <tr>
            <td>Catégorie</td>
            <td>{{ form_widget(formEvent.idCategorie) }}</td>  
        </tr>
        <tr>
            <td>Choix de la police</td>
            <td class="radiobutton">{{ form_widget(formEvent.typographyId)}}</td>  
        </tr>
        <tr>
            <td>Phrase de présentation</td>
            <td>{{ form_widget(formEvent.presentation,{ 'attr': {'class': 'input-xxlarge'} })}}</td>  
        </tr>
       <!-- <tr>
            <td>Date de début</td>
            <td>{{ form_widget(formEvent.dateBegin,{ 'attr': {'class': 'input-small'} })}}</td>  
        </tr>
        <tr>
            <td>Date de fin</td>
            <td>{{ form_widget(formEvent.dateEnd,{ 'attr': {'class': 'input-small'} })}}</td>  
        </tr>-->
        <tr>
            <td>Description</td>
            <td>{{ form_widget(formEvent.description,{ 'attr': {'class': 'input-xxlarge'} })}}</td>  
        </tr>
         <tr class="radiobutton">
            <td>Langue</td>
            <td>{{ form_widget(formEvent.languageId) }}</td>  
        </tr>
        <tr>
            <td>Définir un statut</td>
            <td>{{ form_widget(formEvent.isPrivate) }}</td>  
        </tr>
       <!-- <tr>
            <td>Accès</td>
            <td><p><input type="radio" name="test" checked="checked" /> Public</p>
                <p><input type="radio" name="test" /> Privé</p></td>  
        </tr>-->
        <tr>
            <td></td>
            <td>
                {{ form_rest(formEvent) }}
                    <button class="btn btn-success" type="submit">Enregistrer</button>
                </td>  
            </tr>
        </table>

    </form>
</div>
</div>
{% endblock %}
{% block javascripts %}
<script>
   $(function() {
        /*$('#event_dateBegin,#event_dateEnd').datepicker({'dateFormat' : 'dd/mm/yy'});*/
        $('form[name="heyvent"]').submitFormAndReturnHtml('.heyvent_contain_step',null); 
        
    });
</script>
{% endblock %}