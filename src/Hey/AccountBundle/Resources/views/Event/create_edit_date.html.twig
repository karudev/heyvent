{% render 'HeyAccountBundle:Event:etapemenu' with {'eventId' : eventId} %}
<div class="heyvent_form">
    <h3>{{title}}</h3>
<form method="post" action="{{ path('_account_event_create_date')}}" name="heyvent">
    <table>

        <tr>
            <td>Date de d√©but</td>
            <td>{{ form_widget(formEvent.dateBegin,{ 'attr': {'class': 'input-small'} })}}</td>  
        </tr>
        <tr>
            <td>Date de fin</td>
            <td>{{ form_widget(formEvent.dateEnd,{ 'attr': {'class': 'input-small'} })}}</td>  
        </tr>

        <tr>
            <td></td>
            <td>
                {{ form_rest(formEvent) }}
                    <button class="btn btn-success" type="submit">Enregistrer</button>
                </td>  
            </tr>
        </table>
</form>
</div>
{% block javascripts %}
<script>
   $(function() {
        $('#event_dateBegin,#event_dateEnd').datepicker({'dateFormat' : 'dd/mm/yy'});
        $('form[name="heyvent"]').submitFormAndReturnHtml('.heyvent_form',null); 
        
    });
</script>
{% endblock %}